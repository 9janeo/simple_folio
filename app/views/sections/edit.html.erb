<% @page_title = "Edit Section" %>
<%= link_to("<< Back to Sections", sections_path(:page_id => @page.id), :class => 'back-link') %>

    <div class="Edit Section">
        <h2>Edit Section</h2>
        
        <%= form_for @section, :url => section_path(@section, :page_id => @page.id) do |f| %>
            
            <%= render(:partial => 'form', :locals => {:f => f}) %>
            
            <div class="form-buttons">
                <%= f.submit("Update Section") %>
            </div>
        <% end %>
    </div>
<% @page_title = @page.name.to_s %>

<h1>Pages#show</h1>


<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => 'backlink') %>

    <div>
        <h2>Show Page</h2>
        
        <table summary="Page form Fields">
            <tr>
                <th>Name</th>
                <td><%= @page.name %></td>
            </tr>
            <tr>
                <th>Subject ID</th>
                <td><%= @page.subject_id %></td>
            </tr>
            <tr>
                <th>Permalink</th>
                <td><%= @page.permalink %></td>
            </tr>
            <tr>
                <th>Position</th>
                <td><%= @page.position %></td>
            </tr>
            <tr>
                <th>Visible</th>
                <td><%= @page.visible ? 'true'  : 'false' %></td>
            </tr>
        </table>
        
    </div>

<% @page_title = "New Page" %>
<%= link_to("<< Back to Page List", pages_path(:subject_id => @subject.id), :class => 'back-link') %>
<h1>Pages#new</h1>

<div>
    <%= form_for(@page, :url => pages_path(:subject_id => @subject.id)) do |f| %>
    
        <%= render(:partial => 'form', :locals => {:f => f}) %>
        
        <div class="form-buttons">
            <%= f.submit("Create Page") %>
        </div>
        
    <% end %>

</div>

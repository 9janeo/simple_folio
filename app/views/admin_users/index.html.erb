
<% @page_title = "Admin Users List" %>

<%= link_to("<< Back to Menu", access_menu_path, :class => 'action new') %>
</br>

<div class="admin_users index">
    
    <h2>Admin Users</h2>
    <%= link_to("Add New Admin", new_admin_user_path, :class => 'action new') %>
    <div><%= pluralize(@admin_list.size, 'admin user') %> found</div>
    <table class="listing" summary="Admin list">
        <tr class="header">
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Created</th>
        </tr>
        <% @admin_list.each do |admin| %>
        <tr>
            <td><%= admin.username %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= admin.created_at %></td>
            <td class="actions">
                <%= link_to("Edit", edit_admin_user_path(admin), :class => 'action edit') %>
                <%= link_to("Delete", delete_admin_user_path(admin), :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>